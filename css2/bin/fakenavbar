#!/usr/local/bin/perl
# neutral filter to be used instead of addnavbar for printing
#
# Arnaud Le Hors - lehors@w3.org
# $Id: fakenavbar,v 1.2 1997-08-01 14:19:38 lehors Exp $

if ($ARGV[0] eq "-top") {
    shift;
}

if ($ARGV[0] eq "-bottom") {
    shift;
}

if ($ARGV[0] eq "-hr") {
    shift;
}

if ($ARGV[0] eq "-prev") {
    shift;
}

if ($ARGV[0] eq "-next") {
    shift;
}

if (($ARGV[0] eq "-r") && $ARGV[1]) {
    shift;
    shift;
}

$PROGNAME = substr($0, rindex($0, "/") + 1);

if ($#ARGV < 1) {
    print "Usage: $PROGNAME [-top] [-bottom] [-hr] [-prev] [-next] [-r realpath] src trgt ...\n";
    exit 1;
} else {
    $input = $ARGV[0];
    $output = $ARGV[1];
}


### main
open(INPUT, "$input");
open(OUTPUT, "> $output");
while (<INPUT>) {
    print OUTPUT $_;
}
close(INPUT);
close(OUTPUT);
