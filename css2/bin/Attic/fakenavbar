#!/usr/local/bin/perl
# neutral filter to be used instead of addnavbar for printing
#
# Arnaud Le Hors - lehors@w3.org
# $Id: fakenavbar,v 1.1 1997-07-29 17:14:36 ijacobs Exp $

if (($_ = $ARGV[0], /^-r/) && $ARGV[0]) {
    shift;
    $realpath = $ARGV[0];
    shift;
} else {
    $realpath = ();
}

$PROGNAME = substr($0, rindex($0, "/") + 1);

if ($#ARGV < 4) {
    print "Usage: $PROGNAME [-r realpath] src toc elemindex attrindex trgt\n";
    exit 1;
} else {
    $input = $ARGV[0];
    shift;
    if (! $realpath) {
	$realpath = $input;
    }
    $tocf = $ARGV[0];
    $eindxf = $ARGV[1];
    $aindxf = $ARGV[2];
    $output = $ARGV[3];
}


### main
open(INPUT, "$input");
open(OUTPUT, "> $output");
while (<INPUT>) {
    print OUTPUT $_;
}
close(INPUT);
close(OUTPUT);
